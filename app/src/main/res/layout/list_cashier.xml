<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:id="@+id/card"
    android:background="@drawable/button_corner_white"
    android:padding="10dp">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">
        <ImageView
            android:id="@+id/ivGambar"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ascendant_network" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textSize="@dimen/text_extra_large"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gotham"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:id="@+id/tvProduct"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.0"
            android:textSize="@dimen/text_medium"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/gotham"
            android:layout_marginTop="10dp"
            android:id="@+id/tvHarga"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha="0.2"
            android:elevation="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn_rounded_primary"
                android:id="@+id/linearAdd">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="Tambah"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/gotham"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_extra_large"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/linearAdded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/linearNote"
                    android:layout_marginRight="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/btn_round_primary">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/note_white"
                        android:layout_margin="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:foregroundGravity="center">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/linearMinus"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_rounded_primary">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/minus"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:text="1"
                            android:gravity="center"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/gotham"
                            android:textStyle="bold"
                            android:id="@+id/tvJumlah"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_gravity="center"
                        android:gravity="center">
                        <LinearLayout
                            android:id="@+id/linearPlus"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/btn_rounded_primary">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/plus"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>